{
  "name": "stylized",
  "version": "0.2.5",
  "description": "Stylish and fun react component library",
  "author": "Tyler Knipfer <knipferrc@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knipferrc/stylized.git"
  },
  "bugs": {
    "url": "https://github.com/knipferrc/stylized/issues"
  },
  "keywords": [
    "react",
    "stylized",
    "library",
    "components"
  ],
  "scripts": {
    "test": "NODE_ENV=development jest",
    "build": "NODE_ENV=production rollup -c",
    "start": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"src/**/*.js\""
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.12.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^21.2.1",
    "prettier": "^1.8.2",
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-test-renderer": "^16.1.1",
    "rollup": "^0.52.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.5.5",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify-es": "^3.2.0"
  },
  "dependencies": {
    "styled-components": "^2.2.3"
  },
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true,
    "semi": false
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage/",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupTestFrameworkScriptFile": "./src/setupTests"
  },
  "files": [
    "dist"
  ]
}
