{
  "name": "stylized",
  "version": "0.2.5",
  "description": "Stylish and fun react component library",
  "main": "dist/index.js",
  "module": "dist/index.es6.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --env=jsdom",
    "test:watch": "npm run test -- --watch",
    "start": "cross-env NODE_ENV=development tsc-watch --onSuccess \"rollup -c\"",
    "prebuild": "rimraf dist",
    "build": "tsc && cross-env NODE_ENV=production rollup -c && cross-env NODE_ENV=development rollup -c && rimraf compiled",
    "prepublish": "npm run build",
    "format": "prettier --trailing-comma none --no-semi --single-quote  --write 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "doctoc": "doctoc .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "README.md": [
      "doctoc .",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true,
    "semi": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knipferrc/stylized.git"
  },
  "keywords": [
    "react",
    "stylized",
    "library",
    "components"
  ],
  "author": "Tyler Knipfer <knipferrc@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/knipferrc/stylized/issues"
  },
  "homepage": "https://github.com/knipferrc/stylized#readme",
  "devDependencies": {
    "@types/jest": "21.1.7",
    "@types/node": "^8.0.53",
    "@types/prop-types": "15.5.2",
    "@types/react": "16.0.25",
    "@types/react-dom": "16.0.3",
    "@types/react-test-renderer": "16.0.0",
    "cross-env": "5.1.1",
    "doctoc": "^1.3.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-test-renderer": "^16.1.1",
    "rollup": "^0.51.8",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-resolve": "0.0.1-predev.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-uglify": "^2.0.1",
    "ts-jest": "^21.2.3",
    "ts-lint": "^4.5.1",
    "tsc-watch": "1.0.8",
    "tslint-react": "^3.2.0",
    "typescript": "^2.6.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "dependencies": {}
}
